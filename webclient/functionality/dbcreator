CREATE TABLE LAYOUT(LAYOUTID VARCHAR(10), LAYOUTNAME VARCHAR(10),NUMOFLAYERS INT,CITY VARCHAR(10),AREA VARCHAR(10),GPS VARCHAR(20), CONSTRAINT LAYOUTPK1 PRIMARY KEY (LAYOUTID));

CREATE TABLE LAYER(LAYERID INT, LAYOUTID VARCHAR(10),LAYOUTSIZE INT(2), CONSTRAINT LAYERPK1 PRIMARY KEY (LAYERID,LAYOUTID),CONSTRAINT LAYERFK1 FOREIGN KEY LAYER(LAYOUTID) REFERENCES LAYOUT(LAYOUTID) ON DELETE CASCADE ON UPDATE CASCADE);

CREATE TABLE ACCOUNTS(USER VARCHAR(30),UPASSWORD VARCHAR(15), CONSTRAINT A1PK1  PRIMARY KEY (USER));

CREATE TABLE SLOTS(SLOTID VARCHAR(30),LAYERID INT,LAYOUTID VARCHAR(10),POSITION INT(2),RATE FLOAT,USER VARCHAR(30) NOT NULL,TIMEIN DATETIME,SLOTTYPE INT, CONSTRAINT S1PK1 PRIMARY KEY (SLOTID),CONSTRAINT S1FK1 FOREIGN KEY SLOTS(LAYERID) REFERENCES LAYER(LAYERID) ON DELETE CASCADE ON UPDATE CASCADE,CONSTRAINT S1FK2 FOREIGN KEY SLOTS(LAYOUTID) REFERENCES LAYOUT(LAYOUTID) ON DELETE CASCADE ON UPDATE CASCADE);
